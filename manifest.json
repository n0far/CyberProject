{
    "manifest_version": 2,
    "name": "My Chrome Extension",
    "description": "This extension demonstrates how to integrate Python",
    "version": "1.0",
    "permissions": ["activeTab", "nativeMessaging"],
    "background": {
      "scripts": ["scripts/background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "html/popup.html"
    }
}
